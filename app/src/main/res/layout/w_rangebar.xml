<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#dcb2b2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/leftThumb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/thumb"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mainBar" />

        <View
            android:id="@+id/rightThumb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/thumb"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainBar"
            app:layout_constraintEnd_toEndOf="@+id/mainBar"
            app:layout_constraintTop_toTopOf="@+id/mainBar" />

        <View
            android:id="@+id/mainBar"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mainbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/rangeBar"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rangebar"
            app:layout_constraintBottom_toBottomOf="@+id/mainBar"
            app:layout_constraintEnd_toEndOf="@id/rightThumb"
            app:layout_constraintStart_toStartOf="@id/leftThumb"
            app:layout_constraintTop_toTopOf="@+id/mainBar" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>